@model MMSite6.Models.Item

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="itemId" />
			<div class="form-group">
				<label asp-for="address" class="control-label"></label>
				<input asp-for="address" class="form-control" />
				<span asp-validation-for="address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="sqft" class="control-label"></label>
				<input asp-for="sqft" class="form-control" />
				<span asp-validation-for="sqft" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">On Order</label>
				<select asp-for="orderId" class="form-control" asp-items="ViewBag.orderId"></select>
				<span asp-validation-for="orderId" class="text-danger"></span>
			</div>
			<div class="form-group" hidden>
				<label asp-for="position" class="control-label"></label>
				<input asp-for="position" class="form-control" />
				<span asp-validation-for="position" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-controller="Orders" asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
